@model PizzaCo.Models.Ingredients

@{
    ViewBag.Title = "Create Pizza";
}

<h2>Create Your Pizza</h2>
@using (@Html.BeginForm("CreatePizzaConfirm", "Order"))
{
    <h4>Doughs:</h4>
    foreach (var dough in Model.Doughs)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => dough.Name)</h3>
                <img class="card-img-top" src="~/Images/@Html.DisplayFor(modelItem => dough.Picture)" width="200" height="150" alt="Card image cap" , style="margin-left: 75px">
                <div class="card-text" style="display: inline-block">
                    <strong>Calories:</strong> @Html.DisplayFor(modelItem => dough.Calories) cal.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Weight:</strong> 000 gr.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Price:</strong> $@Html.DisplayFor(modelItem => dough.Price)
                </div>
                <div class="cart-text">
                    Add Dough: @Html.CheckBox("dough" + dough.Id)
                </div>
            </div>
        </div>
    }
    <h4>Dough Types:</h4>
    foreach (var doughType in Model.DoughTypes)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => doughType.Name)</h3>
                <div class="card-text" style="display: inline-block">
                    <strong>Calories:</strong> @Html.DisplayFor(modelItem => doughType.Calories) cal.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Weight:</strong> 000 gr.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Price:</strong> $@Html.DisplayFor(modelItem => doughType.Price)
                </div>
                <div class="cart-text">
                    Add Dough Type: @Html.CheckBox("doughType" + doughType.Id)
                </div>
            </div>
        </div>
    }

    <h4>Toppings:</h4>
    foreach (var topping in Model.Toppings)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => topping.Name)</h3>
                <img class="card-img-top" src="~/Images/@Html.DisplayFor(modelItem => topping.Picture)" width="200" height="150" alt="Card image cap" , style="margin-left: 75px">
                <div class="card-text" style="display: inline-block">
                    <strong>Calories:</strong> @Html.DisplayFor(modelItem => topping.Calories) cal.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Weight:</strong> 000 gr.
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Price:</strong> $@Html.DisplayFor(modelItem => topping.Price)
                </div>
                <div class="cart-text">
                    Add topping: @Html.CheckBox("topping" + topping.Id)
                </div>
            </div>
        </div>
    }
        <div><input type="submit" value="Add pizza" class="btn btn-danger" /></div>
        

}
